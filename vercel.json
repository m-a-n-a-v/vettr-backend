{
  "framework": "hono",
  "installCommand": "npm install --include=dev",
  "buildCommand": "echo 'skip tsc - vercel handles ts compilation'",
  "functions": {
    "api/index.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/v1/cron/market-data",
      "schedule": "0 * * * *"
    },
    {
      "path": "/v1/cron/scores",
      "schedule": "15 * * * *"
    },
    {
      "path": "/v1/cron/red-flags",
      "schedule": "30 * * * *"
    }
  ]
}
